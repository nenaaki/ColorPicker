<Window
    x:Class="Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample"
    xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <cp:HexColorPicker Width="256" Height="256" />
        <Grid>
            <cp:RingColorPicker Width="256" Height="256" />
            <cp:TriangleColorPicker Margin="32,0,0,0" Width="160" Height="160" />
        </Grid>
        <cp:GradualColorPicker Count="8"/>
        <cp:GradualColorPickerSlot BaseColors="{Binding Path=BaseColors, Mode=OneTime}" />
    </StackPanel>
</Window>