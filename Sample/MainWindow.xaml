<Window
    x:Class="Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cp="clr-namespace:Oniqys.Wpf.Controls.ColorPicker;assembly=Oniqys.Wpf.Controls.ColorPicker"
    xmlns:cpconv="clr-namespace:Oniqys.Wpf.Controls.ColorPicker.Converters;assembly=Oniqys.Wpf.Controls.ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <cpconv:ColorToBrushConverter x:Key="ColorToBrushConverter" />
    </Window.Resources>

    <StackPanel Orientation="Horizontal">
        <cp:ColorPickerComboBox
            Margin="8"
            VerticalAlignment="Top"
            ItemsSource="{Binding Path=BaseColors}"
            CurrentValue="{Binding Path=CurrentColor, Mode=TwoWay}"/>
        <Rectangle
            Width="32"
            Height="32"
            Fill="{Binding Path=CurrentColor,Mode=OneWay, Converter={StaticResource ColorToBrushConverter}}" />
    </StackPanel>
</Window>