<Window
    x:Class="Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/ColorPickerComboBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
        
    <StackPanel Orientation="Horizontal">
        <Rectangle
            Name="_rect"
            Width="32"
            Height="32" />
        <cp:ColorPickerControl CurrentColor="{Binding CurrentColor}" SelectedColorChanged="ColorPickerControl_SelectedColorChanged" />
        <ComboBox VerticalAlignment="Top" Style="{StaticResource ColorPickerComboBox}"/>
    </StackPanel>
</Window>