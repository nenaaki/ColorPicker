<Window
    x:Class="Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Sample"
    xmlns:cp="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <cp:HexColorPicker Width="256" Height="256" CurrentColor="{Binding Path=CurrentColor}"/>
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <cp:RingColorPicker Width="192" Height="192" CurrentColor="{Binding Path=CurrentColor}" BaseColor="{Binding BaseColor,Mode=OneWayToSource}" />
            <cp:TriangleColorPicker Margin="32,0,0,0" Width="128" Height="128" CurrentColor="{Binding CurrentColor}" />
            <cp:RgbEditor Grid.Row="1" CurrentColor="{Binding Path=CurrentColor}" />
        </Grid>
        <StackPanel Orientation="Vertical">
            <cp:GradualColorPickerSlot BaseColors="{Binding Path=BaseColors, Mode=OneTime}" CurrentColor="{Binding Path=CurrentColor}" />
            <Border Background="Black">
                <TextBlock Foreground="White" FontWeight="Bold">最近使った色</TextBlock>
            </Border>
            <cp:SimpleColorPicker Width="192" ItemsSource="{Binding BaseColors,Mode=OneTime}" SelectedItem="{Binding Path=CurrentColor}" />
        </StackPanel>
        <cp:GradualColorPicker BaseColor="Red" Count="12" CurrentColor="{Binding Path=CurrentColor}"></cp:GradualColorPicker>
    </StackPanel>
</Window>