<local:HsvColorPickerBase x:Class="Oniqys.Wpf.ColorPicker.RingColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:Oniqys.Wpf.ColorPicker"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid Name="_canvas">
            <Image Name="Ring" />
            <Grid>
                <Canvas>
                    <Grid Name="Current" Width="16" Height="16">
                        <Ellipse Stroke="White"/>
                        <Ellipse Margin="1" Stroke="Black">
                            <Ellipse.Fill>
                                <SolidColorBrush Color="{Binding Path=BaseColor,RelativeSource={RelativeSource AncestorType=local:RingColorPicker}}" />
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                </Canvas>
            </Grid>
        </Grid>
    </Viewbox>
</local:HsvColorPickerBase>